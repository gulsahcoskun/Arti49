<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:id="@+id/imageView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:paddingLeft="15dp"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="3dp"
        android:maxLines="3"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/lbl_title"
        android:textColor="@color/bright_foreground_inverse_material_dark"
        android:typeface="sans"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_height="250dp"
        android:layout_width="fill_parent"
        android:ellipsize="end"
        android:text="New Text"
        android:id="@+id/lbl_intro"
        android:paddingLeft="15dp"
        android:textSize="11sp"
        android:maxLines="4"
        android:layout_gravity="fill"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/lbl_title"
        android:layout_alignStart="@+id/lbl_title"
        android:layout_below="@+id/lbl_title"
        android:layout_alignRight="@+id/lbl_title"
        android:layout_alignEnd="@+id/lbl_title" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
